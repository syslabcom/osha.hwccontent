<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="osha.hwc">
<body>
    <metal:block fill-slot="main"
                 tal:define="id request/id|nothing;
                             toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                             folder python:here.aq_parent;">
    <tal:set define="dummy python:request.RESPONSE.setHeader('X-Deliverance-Page-Class', 'general partner-detail')" />
        <tal:block>
            <div tal:replace="structure provider:plone.abovecontenttitle" />
            <h1 id="title" class="documentFirstHeading">
            <span id="parent-fieldname-title" tal:content="context/title">title</span>
            </h1>
            <div tal:replace="structure provider:plone.belowcontenttitle" />
            <div id="campaign-partner-details">
            <div id="sectionImage" class="span4">
                <!-- here be video ? -->
            </div>
            <div id="content-core">
                <dl class="row-fluid">
                    <div id="introtext"
                        tal:condition="context/text"
                        tal:content="structure context/text/output" />
                </dl>
            </div>
            </div>

            <div id="content-filters">
                HERE BE FILTERS
            </div>

            <div id="eguides" tal:define="eguides view/eguides">
                <div tal:repeat="eguide eguides">
                    <div class="country">
                        <img src="#"
                            tal:attributes="src python:'%s/++theme++osha.hwctheme/HWManageStress_files/flags/%s.png' % (portal_url, eguide['flagname'])" />
                        <span tal:replace="eguide/country">country</span>
                    </div>
                    <span class="language" tal:content="eguide/language">language</span>
                    <a class="download" tal:attributes="href eguide/download">Download</a>
                    <a class="external" tal:attributes="href eguide/url">Online version</a>
                </div>
            </div>
        </tal:block>
    </metal:block>
</body>
</html>
